
<project name="AppEngineCloudClient" default="jnlp">

<property name="classes.dir" value="build/classes"/>
        


 <target name="plugin" >
        <jar destfile="build/AppEngineCloudClient.jar"
		 manifest="etc/MANIFEST.MF">
        <fileset dir="etc">
		<include name="*.xml"/>
	</fileset>
        <fileset dir="${classes.dir}">
			<include name="**/*.class"/>
		</fileset>
        <fileset dir="../AppEngineCloudProtocol/build">
			<include name="**/*.class"/>
		</fileset>
	</jar>
</target>
 <target name="jnlp" depends="plugin">
   <copy todir="../findbugs/jnlp" flatten="true">
                    <fileset dir="lib">
                      <include name="**/*.jar"/>
                      <exclude name="mockito-all-1.8.2.jar"/>
                    </fileset>
                    <fileset dir="build">
                      <include name="*.jar"/>
                    </fileset>
                    <fileset dir="../AppEngineCloudProtocol/lib">
                      <include name="**/*.jar"/>
                    </fileset>
</copy>
</target>
             
</project>

      
