<project name="AppEngineCloudClient" default="install">

  <property file="local.properties" />


    <property name="classes.dir" value="build/classes"/>
    <property name="findbugs.home" value="../../findbugs"/>


    <target name="validate">
        <xmlvalidate lenient="false" failonerror="yes">
            <attribute name="http://apache.org/xml/features/validation/schema" value="true"/>
            <attribute name="http://xml.org/sax/features/namespaces" value="true"/>
            <fileset dir="etc" includes="*.xml"/>
        </xmlvalidate>
    </target>

    <target name="plugin">
        <jar destfile="build/AppEngineCloudClient.jar"
             manifest="etc/MANIFEST.MF">
            <fileset dir="etc">
                <include name="*.xml"/>
            </fileset>
            <fileset dir="${classes.dir}">
                <include name="**/*.class"/>
            </fileset>
            <fileset dir="../AppEngineCloudProtocol/build">
                <include name="**/*.class"/>
            </fileset>
        </jar>
    </target>
    <target name="install" depends="plugin">
        <copy todir="${findbugs.home}/plugin" flatten="true">
            <fileset dir="build">
                <include name="*.jar"/>
            </fileset>
        </copy>
        <copy todir="${findbugs.home}/jnlp" flatten="true">
            <fileset dir="etc">
                <include name="*.jnlp"/>
            </fileset>
        </copy>
        <copy todir="${findbugs.home}/plugin/AppEngineCloudClient" flatten="true">
            <fileset dir="lib">
                <include name="**/*.jar"/>
                <exclude name="mockito-all-1.8.2.jar"/>
            </fileset>
            <fileset dir="../AppEngineCloudProtocol/lib">
                <include name="**/*.jar"/>
            </fileset>
        </copy>
    </target>

</project>

      
